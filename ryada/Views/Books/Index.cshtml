<main>
    <div class="">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"> </a></li>
            <li><a href="index.html">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="index.html"> / Book </a></li>

        </ol>
        <div class="d-flex justify-content-end m-1">
            <a class="btn btn-primary" asp-action="Add" asp-controller="Books">Add book</a>
        </div>
        <div class="card mb-4">
            <div class="row">
                <form asp-action="Index">
                    <div class="col-md-6">

                        <input name="search" class="form-control" style="width: 58%;display: inline;height: 34px;margin: 10px;"  />
                        <button type="submit" class="btn btn-success" style="display: inline;">Search</button>
                    </div>
                </form>
            </div>
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                @*DataTable Example*@
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Author
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                category
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (Book item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Author
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    @item.Category.Name
                                </td>
                                <td class="text-center">

                                    <form asp-action="Edit" method="post" style="display: inline;">
                                        <input value="@item.Id" hidden name="id" />
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-edit"></i>
                                            Edit
                                        </button>

                                    </form>
                                    <form asp-controller="Books" asp-action="Remove" method="post" asp-route-id="@item.Id" style="display: inline;">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-trash"></i>
                                            Delet
                                        </button>

                                    </form>
                                </td>
                            </tr>
                        }



                    </tbody>
                </table>
            </div>

        </div>
    </div>
</main>
