<main>
    <div class="">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"> </a></li>
            <li ><a href="index.html">Dashbourd </a></li>
            <li class="breadcrumb-item active"><a href="index.html"> / orders </a></li>

        </ol>
        <div class="d-flex justify-content-end m-1">
            <a class="btn btn-primary" asp-action="Add" asp-controller="Orders"> Add Orders</a>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                @*DataTable Example*@
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Title Book
                            </th>
                              <th>
                                Total Price
                            </th>
                            <th>
                                Quantity
                            </th>
                            <th>
                                OrderDate
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (order item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Post.Title
                                </td>
                                <td>
                                    @item.TotalPrice
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    @item.OrderDate
                                </td>
                                <td class="text-center">

                                    <form asp-action="Edit" method="get" style="display: inline;" asp-route-id="@item.Id">
                                        @*<input value="@item.Id" hidden name="id" />*@
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-edit"></i>
                                            Edit
                                        </button>

                                    </form>
                                    <form asp-controller="Orders" asp-action="Remove" method="post" asp-route-id="@item.Id" style="display: inline;">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-trash"></i>
                                            Delet
                                        </button>

                                    </form>
                                </td>
                            </tr>
                        }



                    </tbody>
                </table>
            </div>

        </div>
    </div>
</main>
